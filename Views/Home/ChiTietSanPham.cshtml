
@{
    ViewData["Title"] = "ChiTietSanPham";
    Layout = "~/Views/Shared/_LayoutFruit.cshtml";
}
@model ThiThucHanh.ViewModels.ProductDetailViewModel

<div class="single-product mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-md-5">
				<div class="single-product-img">
					<img src=@Model.sanpham.Img alt="">
				</div>
			</div>
			<div class="col-md-7">
				<div class="single-product-content">
					<h3>Green apples have polyphenols</h3>
					<p class="single-product-pricing"><span>Per Kg</span> $@Model.sanpham.Price</p>
					<p>@Model.sanpham.Description</p>
					<h4>Share:</h4>
					<ul class="product-share">
						<li><a href=""><i class="fab fa-facebook-f"></i></a></li>
						<li><a href=""><i class="fab fa-twitter"></i></a></li>
						<li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
						<li><a href=""><i class="fab fa-linkedin"></i></a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

